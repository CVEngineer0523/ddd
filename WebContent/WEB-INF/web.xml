<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>cloud</display-name>
  
  <servlet>
     <servlet-name>tag</servlet-name>
     <servlet-class>com.yc.servlet.TagServlet</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>tag</servlet-name>
     <url-pattern>/tag.action</url-pattern>
  </servlet-mapping>
  <servlet>
     <servlet-name>favorite</servlet-name>
     <servlet-class>com.yc.servlet.FavoriteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>favorite</servlet-name>
     <url-pattern>/fav.action</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>